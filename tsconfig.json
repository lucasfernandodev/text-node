{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/"],
      "@core/*": [ "src/core/*"],
      "@utils/*": [ "src/utils/*"],
      "@components/*": [ "src/components/*"],
      "@styles/*": [ "src/style/*"],
      "@pages/*": [ "src/pages/*"],
      "@database/*": [ "src/database/*"],
      "@context/*": [ "src/context/*"],
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "node",
      "chrome"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },
  "include": [
    "src",
    "src/database/*.ts",
    "scripts/firefox.ts",
    "dist/manifest.json"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
  ],
  
}
